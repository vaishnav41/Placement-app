                       <td><%= eachData.companyId%></td>
                       <td><%= eachData.name %></td>
                       <td><%= eachData.mail %></td>
                       <td><%= eachData.category %></td>
                       <td><a class="btn btn-primary p-2" href="http://localhost:4020/companydetails?compid=<%= eachData.companyId%>">Details</a></td>
                       <td><a class="btn btn-success p-2" href="http://localhost:4020/verifythisrecruiter?compid=<%= eachData.companyId%>">Verify</a></td>
